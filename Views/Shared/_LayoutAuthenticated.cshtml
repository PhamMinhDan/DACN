<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hệ Thống</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- 🔹 Header -->
    <header class="header">
        <div class="logo">
            <a href="/"><img src="~/images/logo.png" alt="Logo" width="100"></a>
        </div>

        <div class="auth-user">
            <div class="user-dropdown">
                <a href="#" class="user-icon">@ViewBag.UserName <span>▼</span></a>
                <ul class="dropdown-menu">
                    <li><a href="/Account/Logout">Đăng xuất</a></li>
                    <li><a href="/Account/Profile">Thông tin cá nhân</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- 🔹 Khu vực chính với thanh bên -->
    <div class="main-container">
        <!-- Thanh bên (Điều hướng bên trái) -->
        <nav class="sidebar">
            <ul>
                <li><a href="/Home/Index"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li><a href="/Transaction/Deposit"><i class="fas fa-money-bill-wave"></i> Nạp tiền</a></li>
                <li><a href="/Service/Packages"><i class="fas fa-box"></i> Gói dịch vụ</a></li>
                <li><a href="/Transaction/History"><i class="fas fa-history"></i> Lịch sử giao dịch</a></li>
                <li><a href="/Account/Profile"><i class="fas fa-user"></i> Thông tin cá nhân</a></li>
                @if (@Context.Session.GetString("UserRole") == "AdminGoiDichVu")
                {
                    <li><a href="/UserManagement/ManageUsers"><i class="fas fa-users"></i> Quản lý thành viên</a></li>
                }
            </ul>
        </nav>

        <!-- Khu vực nội dung chính -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- 🔹 Footer -->
    <footer class="footer">
        <p>© 2025 Hệ Thống. Bản quyền thuộc về công ty XYZ.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.user-icon').click(function (e) {
                e.preventDefault();
                $('.dropdown-menu').toggle();
            });

            // Ẩn dropdown khi nhấp ra ngoài
            $(document).click(function (e) {
                if (!$(e.target).closest('.user-dropdown').length) {
                    $('.dropdown-menu').hide();
                }
            });
        });
    </script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .header {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            vertical-align: middle;
        }

        .auth-user {
            position: relative;
        }

        .user-dropdown .user-icon {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 30px;
            right: 0;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            list-style: none;
            padding: 0;
            margin: 0;
            border-radius: 5px;
        }

            .dropdown-menu li {
                border-bottom: 1px solid #ddd;
            }

                .dropdown-menu li:last-child {
                    border-bottom: none;
                }

                .dropdown-menu li a {
                    display: block;
                    padding: 10px 20px;
                    color: #333;
                    text-decoration: none;
                }

                    .dropdown-menu li a:hover {
                        background-color: #f0f0f0;
                    }

        .main-container {
            display: flex;
            min-height: calc(100vh - 150px);
        }

        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            padding-top: 20px;
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    border-bottom: 1px solid #34495e;
                }

                    .sidebar ul li a {
                        display: block;
                        padding: 15px 20px;
                        color: white;
                        text-decoration: none;
                    }

                        .sidebar ul li a:hover {
                            background-color: #34495e;
                        }

                        .sidebar ul li a i {
                            margin-right: 10px;
                        }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #fff;
        }

        .footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</body>
</html>