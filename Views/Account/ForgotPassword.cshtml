@model QLTT.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <h2>Quên mật khẩu</h2>
    <form method="post" action="/Account/ForgotPassword">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Nhập email của bạn", @required = "required" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <button type="submit" class="btn-primary">Gửi yêu cầu</button>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </form>
    <a href="/Account/Login" class="forgot-password">Quay lại đăng nhập</a>
</div>